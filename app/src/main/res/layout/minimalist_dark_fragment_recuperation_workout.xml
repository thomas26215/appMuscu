<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_minimalist_dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/inter_bold"
            android:text="recup"
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/iv_chronometer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/tv_pause"
            android:layout_marginTop="150dp"
            android:src="@drawable/white_chronometer"
            android:layout_centerHorizontal="true"/>


        <TextView
            android:id="@+id/tv_time_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_chronometer"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/inter_bold"
            android:text="00:34"
            android:textColor="@color/white"
            android:textSize="60dp"
            android:layout_centerHorizontal="true"
            />









        <ImageView
            android:id="@+id/iv_spinner_head"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@+id/tv_time_remaining"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-300dp"
            android:src="@drawable/minimalist_dark_background_for_element"/>

        <TextView
            android:id="@+id/view_spinner_difficulty_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/iv_spinner_head"
            android:layout_alignTop="@+id/iv_spinner_head"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_bold"
            android:text="Difficulty"
            android:textColor="@color/white"
            android:textSize="28dp"/>

        <View
            android:id="@+id/view_spinner_head_fold_unfold"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/iv_spinner_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp" />

        <ImageView
            android:id="@+id/iv_spinner_corps"
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_below="@+id/iv_spinner_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/minimalist_dark_background_for_element"
            android:visibility="invisible"/>

        <View
            android:id="@+id/view_spinner_corps_easy"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@+id/iv_spinner_head"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>

        <View
            android:id="@+id/view_spinner_corps_moyen"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@+id/view_spinner_corps_easy"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>

        <View
            android:id="@+id/view_spinner_corps_hard"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@+id/view_spinner_corps_moyen"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textview_spinner_corps_easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_spinner_corps"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_bold"
            android:text="Facile"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textview_spinner_corps_moyen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_spinner_corps"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/inter_bold"
            android:text="Moyen"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textview_spinner_corps_hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_spinner_corps"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:fontFamily="@font/inter_bold"
            android:text="Difficile"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/iv_back_affichage_elements"
            android:layout_width="350dp"
            android:layout_height="125dp"
            android:layout_below="@+id/tv_time_remaining"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:src="@drawable/minimalist_dark_background_for_element"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_image_trained_muscles"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignStart="@+id/iv_back_affichage_elements"
            android:layout_alignTop="@+id/iv_back_affichage_elements"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/exemple_image_for_targeted_muscle"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_next_exercise2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_back_affichage_elements"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/iv_image_trained_muscles"
            android:fontFamily="@font/inter_bold"
            android:text="Next exercise"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_next_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_next_exercise2"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/iv_image_trained_muscles"
            android:fontFamily="@font/inter_bold"
            android:text="Curl marteau"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_next_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_back_affichage_elements"
            android:layout_alignEnd="@+id/iv_back_affichage_elements"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/inter_bold"
            android:text="10kg"
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:textSize="20dp"
            android:visibility="gone"/>






        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/iv_spinner_corps"
            android:layout_marginTop="150dp">

            <ImageView
                android:id="@+id/iv_complete_button_from_pause_workout"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/minimalist_dark_background_for_element" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/inter_bold"
                android:text="Complete"
                android:textColor="@color/white"
                android:textSize="22dp" />
        </RelativeLayout>


    </RelativeLayout>




</ScrollView>