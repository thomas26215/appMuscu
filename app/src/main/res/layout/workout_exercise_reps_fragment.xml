<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_workout_name_from_rep_session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/inter_bold"
        android:text="Workout"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp" />

    

    <TextView
        android:id="@+id/tv_repetitions"
        android:layout_width="130dp"
        android:layout_height="wrap_content"


        android:layout_below="@+id/tv_workout_name_from_rep_session"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/inter_bold"
        android:text="repetitions"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tv_repetitions_from_rep_session"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_repetitions"
        android:layout_alignStart="@+id/tv_repetitions"
        android:textAlignment="center"
        android:fontFamily="@font/inter_bold"
        android:text="15"
        android:textColor="@color/black"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/tv_series"
        android:layout_width="70dp"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/tv_repetitions"
        android:layout_marginEnd="40dp"
        android:layout_toStartOf="@+id/tv_repetitions"
        android:fontFamily="@font/inter_bold"
        android:text="series"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tv_series_from_rep_session"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_repetitions"
        android:layout_alignStart="@+id/tv_series"
        android:fontFamily="@font/inter_bold"
        android:text="3/4"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/tv_charge"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_repetitions"
        android:layout_toEndOf="@+id/tv_repetitions"
        android:fontFamily="@font/inter_bold"
        android:text="charge"
        android:layout_marginStart="40dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tv_charge_from_rep_session"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_repetitions"
        android:layout_alignStart="@+id/tv_charge"
        android:fontFamily="@font/inter_bold"
        android:text="10kg"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="23dp" />

    <ImageView
        android:id="@+id/iv_image_trained_muscles"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@+id/tv_repetitions"
        android:layout_marginTop="50dp"
        android:src="@drawable/exemple_image_for_targeted_muscle"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_description_from_reps_session"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@+id/iv_image_trained_muscles"
        android:layout_marginTop="20dp"
        android:text="Description complète Description complète Description complète Description complète Description complète Description complète Description complète Description complète Description complète Description complète Description complète Description complète Description complète Description complète Description complète Description complète Description complète Description complète Description complète Description complète Description complète Description complète Description complète Description complète Description complète "
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/purple_smile"
        android:textSize="17dp"/>

    <ImageView
        android:id="@+id/iv_fail_complete_from_reps_session"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_description_from_reps_session"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:src="@drawable/button_complete"/>

    <ImageView
        android:id="@+id/iv_fail_button_from_reps_session"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_description_from_reps_session"
        android:layout_marginTop="20dp"

        android:layout_marginStart="40dp"
        android:src="@drawable/button_fail"/>







</RelativeLayout>

