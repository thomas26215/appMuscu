<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/background_minimalist_dark"
xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_background_elements"
        android:layout_width="370dp"
        android:layout_height="165dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/minimalist_dark_background_for_element"/>

    <ImageView
        android:id="@+id/iv_icon_exercise"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/iv_background_elements"
        android:layout_alignTop="@+id/iv_background_elements"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:tint="@color/white"
        android:src="@drawable/icon_traction" />

    <TextView
        android:id="@+id/tv_name_exo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_background_elements"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/iv_icon_exercise"
        android:fontFamily="@font/inter_bold"
        android:text="gainage"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tv_muscles_travailles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name_exo"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-3dp"
        android:layout_toEndOf="@+id/iv_icon_exercise"
        android:fontFamily="@font/inter_bold"
        android:text="Abdominaux"
        android:textColor="@color/white_opak"
        android:textSize="19dp" />

    <ImageView
        android:id="@+id/iv_parameters"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/iv_background_elements"
        android:layout_alignEnd="@+id/iv_background_elements"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/icon_parameters"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/iv_background_series_infos"
        android:layout_width="345dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/iv_background_elements"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/minimalist_dark_background_for_element"
        app:tint="@color/background_minimalist_dark" />

    <TextView
        android:id="@+id/tv_total_number_series"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/iv_background_series_infos"
        android:layout_alignTop="@+id/iv_background_series_infos"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/inter_bold"
        android:text="quatre series entrées"
        android:textColor="@color/white"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/tv_validate_number_series"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_total_number_series"
        android:layout_alignStart="@+id/iv_background_series_infos"
        android:layout_marginStart="15dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/inter_bold"
        android:text="quatre series entrées"
        android:textColor="@color/white"
        android:textSize="19dp" />

    <ImageView
        android:id="@+id/iv_background_type_exrcise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_background_series_infos"
        android:layout_alignEnd="@+id/iv_background_series_infos"
        android:layout_alignBottom="@+id/iv_background_series_infos"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/tv_total_number_series"
        android:src="@drawable/minimalist_dark_background_for_element" />

    <ImageView
        android:id="@+id/iv_background_parameters"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_background_elements"
        android:layout_alignBottom="@+id/tv_parameters_add_recuperation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/minimalist_dark_background_for_element"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_parameters_edit_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_background_elements"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/inter_bold"
        android:text="Modifier l'exercice"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_parameters_add_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_parameters_edit_exercise"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/inter_bold"
        android:text="Ajouter une note"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_parameters_add_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_parameters_add_note"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/inter_bold"
        android:text="Ajouter une pause"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_parameters_add_recuperation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_parameters_add_pause"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/inter_bold"
        android:text="Ajouter une pause"
        android:textColor="@color/white"
        android:textSize="20dp" />


</RelativeLayout>