<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_minimalist_dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <TextView
            android:id="@+id/tv_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/inter_bold"
            android:text="pause"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/iv_chronometer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/tv_pause"
            android:layout_marginTop="50dp"
            android:src="@drawable/white_chronometer"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_time_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_chronometer"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/inter_bold"
            android:text="00:34"
            android:textColor="@color/white"
            android:textSize="60dp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/iv_spinner_head"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@+id/tv_time_remaining"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"

            android:src="@drawable/minimalist_dark_background_for_element"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/iv_spinner_head"
            android:layout_alignTop="@+id/iv_spinner_head"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_bold"
            android:text="Difficulty"
            android:textColor="@color/white"
            android:textSize="28dp"/>

        <ImageView
            android:id="@+id/iv_spinner_corps"
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_below="@+id/iv_spinner_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/minimalist_dark_background_for_element" />

        <View
            android:id="@+id/view_spinner_corps_easy"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@+id/iv_spinner_head"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>

        <View
            android:id="@+id/view_spinner_corps_moyen"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@+id/view_spinner_corps_easy"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"/>

        <View
            android:id="@+id/view_spinner_corps_hard"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@+id/view_spinner_corps_moyen"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_spinner_corps"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_bold"
            android:text="Facile"
            android:textColor="@color/white"
            android:textSize="28dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_spinner_corps"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/inter_bold"
            android:text="Moyen"
            android:textColor="@color/white"
            android:textSize="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_spinner_corps"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:fontFamily="@font/inter_bold"
            android:text="Difficile"
            android:textColor="@color/white"
            android:textSize="28dp" />


        <ImageView
            android:id="@+id/iv_background_skip"
            android:layout_width="175dp"
            android:layout_height="60dp"

            android:layout_below="@+id/iv_spinner_corps"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/minimalist_dark_background_for_element" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/iv_background_skip"
            android:layout_alignTop="@+id/iv_background_skip"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_bold"
            android:text="Pass"
            android:textColor="@color/white"
            android:textSize="28dp"/>





    </RelativeLayout>




</ScrollView>