<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/citations_categorie_adapter_case_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/citation_categorie_case_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/citations_categorie_adapter_name_text"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:fontFamily="@font/purple_smile"
        android:text="Title"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/citations_categorie_adapter_case_image"
        app:layout_constraintTop_toTopOf="@+id/citations_categorie_adapter_case_image" />


</androidx.constraintlayout.widget.ConstraintLayout>