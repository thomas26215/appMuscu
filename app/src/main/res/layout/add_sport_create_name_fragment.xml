<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity"
>

    <TextView
        android:id="@+id/tv_nommer_seance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nommez votre\nséance"
        android:textSize="25dp"
        android:textAlignment="center"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_3_charactères"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_nommer_seance"
        android:layout_alignStart="@+id/tv_nommer_seance"
        android:layout_marginStart="-40dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="3 charactères"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tv_max_40_characteres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_3_charactères"
        android:layout_alignStart="@+id/tv_3_charactères"
        android:layout_marginStart="0dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="max 40 charactères"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/iv_background_add_name"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tv_max_40_characteres"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/add_name_sport_bar_image" />


    <ImageView
        android:id="@+id/iv_error_session_name"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:src="@drawable/trop_court"
        android:visibility="invisible"
        android:layout_marginTop="500dp"/>


    <EditText
        android:id="@+id/et_enter_session_name"
        android:layout_width="310dp"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/iv_background_add_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:fadeScrollbars="false"
        android:fontFamily="@font/open_sans_bold"
        android:hint="Nom de votre séance"
        android:inputType="text"
        android:scrollbars="horizontal"
        android:textColor="@color/primary_color"
        android:textColorHint="@color/secondary_color"
        android:textSize="25dp"
        android:textAlignment="center"/>










    <ImageView
        android:id="@+id/btn_go_back_to_home_from_create_session_name"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/back_button_1" />

    <ImageView
        android:id="@+id/btn_go_to_sport_settings"
        android:layout_width="225dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="205dp"
        android:src="@drawable/next_button_1" />










</RelativeLayout>